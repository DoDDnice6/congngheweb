
@{
    ViewBag.Title = "Insert";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@model FlatShop.Models.EF.ProductCategory
<form action="Insert" method="post">
    <div class="form-horizontal">
        <h4>Danh mục sản phẩm</h4>

        <div class="form-group">
            <label class="control-label col-md-2" for="Name">Menu chứa</label>
            <div class="col-md-10">
                @*<input class="form-control text-box single-line" id="ParentID" name="ParentID" type="text" value="">*@
                @Html.DropDownListFor(model => model.ParentID, null, new { @class = "form-control" })
                <span class="field-validation-valid text-danger" data-valmsg-for="ParentID" data-valmsg-replace="true"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2" for="Name">Tên danh mục</label>
            <div class="col-md-10">
                <input class="form-control text-box single-line" id="Name" name="Name" type="text" value="">
                <span class="field-validation-valid text-danger" data-valmsg-for="Name" data-valmsg-replace="true"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2" for="Name">MetaTitle</label>
            <div class="col-md-10">
                <input class="form-control text-box single-line" id="MetaTitle" name="MetaTitle" type="text" value="">
                <span class="field-validation-valid text-danger" data-valmsg-for="MetaTitle" data-valmsg-replace="true"></span>
            </div>
        </div>
        
        <div class="form-group">
            <label class="control-label col-md-2" for="Name">Thứ tự hiển thị</label>
            <div class="col-md-10">
                <input class="form-control text-box single-line" id="DisplayOrder" name="DisplayOrder" type="text" value="">
                <span class="field-validation-valid text-danger" data-valmsg-for="DisplayOrder" data-valmsg-replace="true"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2" for="Name">Trạng thái</label>
            <div class="col-md-10">
                <select class="form-control text-box single-line" id="Status" name="Status">
                    <option value="true">Có</option>
                    <option value="false">Không</option>
                </select>
                <span class="field-validation-valid text-danger" data-valmsg-for="Status" data-valmsg-replace="true"></span>
            </div>
        </div>
        


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm mới" class="btn btn-default">
            </div>
        </div>
    </div>
</form>
<div>
   <a href="/Admin/ProductCategory/Index" class="btn btn-primary">Trở về</a>
</div>




