@using FlatShop.Models.EF
@model List<User>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Người dùng
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">

                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <div class="form-group">
                        <a href="/Admin/User/Insert" class="btn btn-primary">Thêm mới</a>
                    </div>
                    <thead>
                        <tr>
                            <th>Email</th>
                            <th>Họ Tên</th>
                            <th>Password</th>
                            <th>Số điện thoại</th>
                            <th>Địa chỉ</th>
                            <th>Tác vụ</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Email</td>
                                <td>@item.Name</td>
                                <td>@item.Password</td>
                                <td>@item.Phone</td>
                                <td>@item.Address</td>
                                <td>
                                    @Html.ActionLink("Chi tiết", "Detail", new { ID = item.Email }) |
                                    @Html.ActionLink("Sửa", "Update", new { ID = item.Email }) |
                                    @Ajax.ActionLink("Xóa", "Delete", "User", new { @id = item.Email }, new AjaxOptions
                           {
                               Confirm = "Bạn có muốn xóa " + item.Name + " không?",
                               OnComplete = "$('#row_" + item.Email + "').remove()",
                               HttpMethod = "Delete"
                           })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
